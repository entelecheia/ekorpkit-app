#!/bin/bash
# set off unbound variable check
RELEASE_TYPE=${RELEASE_TYPE:-"frontend"}
VERSION=${VERSION:-"$(date +'%y.%m.%d')"}
VARIANT=${VARIANT:-""}
USERNAME=${USERNAME:-"entelecheia"}

if [[ "${RELEASE_TYPE}" == "backend" ]]; then
    BUILD_FROM="${FRONTEND_BUILD_FROM}"
elif [[ "${RELEASE_TYPE}" == "frontend" ]]; then
    BUILD_FROM="${BACKEND_BUILD_FROM}"
fi
# shellcheck disable=SC2034
BUILD_ARGS="--build-arg BUILD_FROM='${BUILD_FROM}' "
